@model SajhaSabal.Models.UserRoleModel

@{
    ViewData["Title"] = "AssignRole";
    List<SelectListItem> roles = ViewBag.Roles;
    List<SelectListItem> users = ViewBag.Users;
}

<h1>Roles</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignRole" asp-controller="Account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <select asp-for= "RoleName" asp-items="roles" class="form-control"></select>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" asp-items="users" class="form-control"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Assign" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}