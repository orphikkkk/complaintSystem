@model SajhaSabal.Models.RoleModel

@{
    ViewData["Title"] = "Roles";
    List<SelectListItem> roles = ViewBag.Roles;
}

<h1>AssignRole</h1>
<hr/>
<div class="row">
    <div class="col-md-4">
        <ul class="list-group">
            <li class="list-group-item active">Roles</li>
            @foreach (var rol in roles)
            {
                <li class="list-group-item">@rol.Text</li>
            }
        </ul>
        <h2>Add New Role</h2>
        <hr>
        <form asp-action="Roles" asp-controller="Account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Assign" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}